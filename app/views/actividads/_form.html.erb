<%= simple_form_for @actividad, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="line"><%= f.input :Nombre %></div>
  <div class="line"><%= f.input :DiaHabil, :label => "Dia Habil" %></div>
  <div class="line"><%= f.input :Fecha %></div>
  <div class="line"><%= f.association :tipo_actividad, :label_method => :Nombre, :label => "Tipo de actividad", :include_blank => false %></div>
  <div class="line"><%= f.input :puntuacion, :collection => 1..10, :include_blank => false%></div>
  <div class="line"><%= f.association :visitadors, :collection => Visitador.all, :label_method => :Nombre, :label => "Seleccione los visitadores participantes: ", :input_html => {:id => "mySelect", :size => 15}%></div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                actividads_path, :class => 'btn' %>
  </div>
<% end %>


