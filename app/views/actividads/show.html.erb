<%- model_class = @actividad.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Nombre) %>:</strong></dt>
  <dd><%= @actividad.Nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:DiaHabil) %>:</strong></dt>
  <dd><%= @actividad.DiaHabil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Fecha) %>:</strong></dt>
  <dd><%= @actividad.Fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_id) %>:</strong></dt>
  <dd><%= @actividad.tipo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:puntuacion) %>:</strong></dt>
  <dd><%= @actividad.puntuacion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              actividads_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actividad_path(@actividad), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actividad_path(@actividad),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
