<%- model_class = @tipo_actividad.class -%>
<div class="page-header">
  <h1>Tipo de Actividad</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Nombre) %>:</strong></dt>
  <dd><%= @tipo_actividad.Nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Observaciones) %>:</strong></dt>
  <dd><%= @tipo_actividad.Observaciones %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tipo_actividads_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tipo_actividad_path(@tipo_actividad), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tipo_actividad_path(@tipo_actividad),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
