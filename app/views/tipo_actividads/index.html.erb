<%- model_class = TipoActividad.new.class -%>
<div class="page-header">
  <h1>Tipos de Actividad</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Nombre) %></th>
      <th><%= model_class.human_attribute_name(:Observaciones) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_actividads.each do |tipo_actividad| %>
      <tr>
        <td><%= link_to tipo_actividad.id, tipo_actividad_path(tipo_actividad) %></td>
        <td><%= tipo_actividad.Nombre %></td>
        <td><%= tipo_actividad.Observaciones %></td>
        <td><%=l tipo_actividad.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tipo_actividad_path(tipo_actividad), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tipo_actividad_path(tipo_actividad),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tipo_actividad_path,
            :class => 'btn btn-primary' %>
